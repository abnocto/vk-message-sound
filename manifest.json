{
    
  "manifest_version": 2,
  "name": "VK Message Sound",
  "version": "1.1.2",
  "description": "Расширение для установки собственных звуковых сигналов при получении новых сообщений вк, различных для каждого диалога.",

  "content_scripts": [
    {
      "matches": [ "*://vk.com/*" ],
      "js": [ "build/bundle.min.js" ]
    }
  ],

  "web_accessible_resources": [
    "build/wrapper.min.js",
    "img/cross.png",
    "img/note.png"
  ],

  "icons": {
    "16"  : "icons/16x16.png",
    "48"  : "icons/48x48.png",
    "64"  : "icons/64x64.png",
    "128" : "icons/128x128.png"
  }

}